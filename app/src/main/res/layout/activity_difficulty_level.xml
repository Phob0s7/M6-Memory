<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".Activity.DifficultyLevelActivity">

    <TextView
        android:id="@+id/activity_difficulty_level_titre_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="64dp"
        android:text="@string/niveaux_de_difficult"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/activity_difficulty_level_moyen_btn"
        android:layout_width="118dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="120dp"
        android:text="@string/moyen"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_difficulty_level_star2_ImageView" />

    <Button
        android:id="@+id/activity_difficulty_level_difficile_btn"
        android:layout_width="132dp"
        android:layout_height="61dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="112dp"
        android:text="@string/difficile"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_difficulty_level_star3_ImageView" />

    <Button
        android:id="@+id/activity_difficulty_level_facile_btn"
        android:layout_width="101dp"
        android:layout_height="58dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="408dp"
        android:text="@string/facile"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_difficulty_level_star1_ImageView" />

    <ImageView
        android:id="@+id/activity_difficulty_level_star1_ImageView"
        android:layout_width="252dp"
        android:layout_height="49dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="54dp"
        android:contentDescription="@string/star1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_difficulty_level_titre_textView"
        app:srcCompat="@drawable/star_1" />

    <ImageView
        android:id="@+id/activity_difficulty_level_star2_ImageView"
        android:layout_width="286dp"
        android:layout_height="53dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="37dp"
        android:contentDescription="@string/star2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_difficulty_level_facile_btn"
        app:srcCompat="@drawable/stars_2" />

    <ImageView
        android:id="@+id/activity_difficulty_level_star3_ImageView"
        android:layout_width="289dp"
        android:layout_height="52dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="35dp"
        android:contentDescription="@string/star3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_difficulty_level_moyen_btn"
        app:srcCompat="@drawable/stars_3" />

</androidx.constraintlayout.widget.ConstraintLayout>